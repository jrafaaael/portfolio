---
import Body from "./Body.astro";
import Media from "./Media.astro";
import type { Project } from "../../../data/projects";

interface Props extends Pick<Project, "title" | "description" | "img"> {
  isSmaller: boolean;
}

const { description, title, img, isSmaller } = Astro.props;
---

<article
  class={`border border-white/10 rounded-2xl ${
    isSmaller ? "lg:col-span-2" : "lg:col-span-3"
  } relative overflow-hidden transition duration-300 hover:scale-[1.025]`}
>
  <Media title={title} img={img} />
  <Body description={description} title={title} />
</article>
