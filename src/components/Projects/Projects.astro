---
import ProjectList from "./ProjectList.astro";
import Link from "../Link.astro";
import Cube from "../icons/Cube.astro";
---

<section>
  <h2 class="text-2xl font-bold">
    <a href="#projects" class="flex gap-4">
      <Cube />
      Featured projects
    </a>
  </h2>
  <p class="mb-8 ml-9 text-xl text-rose-100/70">
    You can see more
    <Link href="#">here</Link>
  </p>
  <section
    class="flex flex-col gap-8 md:grid md:grid-cols-2 md:gap-10 lg:grid-cols-5"
  >
    <ProjectList />
  </section>
</section>
