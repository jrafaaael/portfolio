---
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="preload"
      href="/fonts/Epilogue.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="apple-mobile-web-app-title" content="jrafaaael" />
    <meta name="application-name" content="jrafaaael" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffe4e6" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="bg-stone-900 text-rose-100/90 tracking-wider antialiased [&_*]:outline-none focus-visible:[&_*]:ring-2 focus-visible:[&_*]:ring-rose-400"
  >
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Epilogue";
    src: url("/fonts/Epilogue.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  svg {
    width: 20px;
    aspect-ratio: 1;
    display: inline-block;
    vertical-align: text-bottom;
  }
</style>
