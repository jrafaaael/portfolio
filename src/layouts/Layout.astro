---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-900 text-rose-100/90 antialiased">
    <div class="pointer-events-none z-[-1] motion-safe:animate-rotate-colors">
      <div
        class="max-w-5xl h-80 mx-auto rounded-b-lg rounded-t-lg bg-gradient-to-r from-amber-500 via-indigo-500 to-emerald-500 absolute inset-0 -top-4 -left-16 opacity-25 blur-3xl md:max-w-5xl md:h-96 md:top-16 md:left-0 rotate-45"
      >
      </div>
    </div>
    <slot />
  </body>
</html>
